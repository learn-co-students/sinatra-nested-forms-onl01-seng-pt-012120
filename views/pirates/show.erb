<h1>Display your Pirate here</h1>
<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h4>Weight: <%= @pirate.weight %></h4><br>
  <h4>Height: <%= @pirate.height %></h4>
</div><br>

<h2>Ships</h2>
<div class="first_ship">
  <% @ships.each do |ship| %>
  <h3>Name: <%= ship.name %></h3><br>
  <h4>Weight: <%= ship.type %></h4><br>
  <h4>Booty: <%= ship.booty %></h4>
  
</div><br>
<%end%>