<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Pirates</title>
</head>
<body>
<h1>Pirate</h1>
<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3>
  <h4>Weight: <%= @pirate.weight %> lbs</h4>
  <h4>Height: <%= @pirate.height %> inches</h4>
</div><br>

<h2>Ship One</h2>
<% @ships.each.with_index do |ship, index| %>
  <div class="ship">
    <% if index == 0 %>
    <p>Name: <%= ship.name%></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p><br>
    <% end %>
  <% end %>
  </div><br>

<h2>Ship Two</h2>
<% @ships.each.with_index do |ship, index| %>
  <div class="ship">
    <% if index == 1 %>
    <p>Name: <%= ship.name%></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p><br>
    <% end %>
  <% end %>
  </div><br>
</body>
</html>